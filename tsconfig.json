{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "ES2020",
		"lib": ["ES2020"],
		"skipLibCheck": false,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "CommonJS",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react"
	},
	"include": ["./src"]
}
